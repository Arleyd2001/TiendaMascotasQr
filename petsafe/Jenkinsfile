pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Instalar Dependencias') {
            steps {
                script {
                    def npmHome = tool name: 'NodeJS', type: 'NodeJSInstallation'
                    env.PATH = "${npmHome}/bin:${env.PATH}"
                    sh 'npm install'
                }
            }
        }

        stage('Ejecutar Pruebas') {
            steps {
                script {
                    def npmHome = tool name: 'NodeJS', type: 'NodeJSInstallation'
                    env.PATH = "${npmHome}/bin:${env.PATH}"
                    sh 'npm test'
                }
            }
        }
    }

    post {
        always {
            junit '**/coverage/junit.xml'
        }

        success {
            echo 'Las pruebas pasaron exitosamente.'
        }

        failure {
            echo 'Las pruebas fallaron. Revisar logs para m√°s detalles.'
        }
    }
}
