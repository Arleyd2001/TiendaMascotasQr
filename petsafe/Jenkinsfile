pipeline {
    agent any
    
    environment {
        FIREBASE_PROJECT_ID = 'petsafe-a2cff' // Define tu proyecto Firebase
    }

    stages {
        stage('Verificar conexión con Firebase') {
            steps {
                script {
                    def result = sh(script: "firebase projects:list", returnStdout: true).trim()
                    if (result.contains(FIREBASE_PROJECT_ID)) {
                        println "Conexión exitosa con Firebase"
                    } else {
                        error "Error: No se pudo conectar con Firebase"
                    }
                }
            }
        }
    }
}
