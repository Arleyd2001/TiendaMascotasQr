pipeline {
    agent any
    
    stages {
        stage('Hola Mundo') {
            steps {
                script {
                    echo '¡Hola Mundo!'
                }
            }
        }
        
        stage('Operación Matemática') {
            steps {
                script {
                    def num1 = 10
                    def num2 = 5
                    def resultado = num1 + num2
                    echo "La suma de ${num1} y ${num2} es ${resultado}"
                }
            }
        }
    }
}
