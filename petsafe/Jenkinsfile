pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    // Instalar dependencias usando npm
                    sh 'npm install'
                }
            }
        }

        stage('Run tests') {
            steps {
                script {
                    // Ejecutar pruebas
                    sh 'npm test'
                }
            }
        }
    }

    post {
        always {
            junit '**/test-results.xml'
        }
    }
    
}
